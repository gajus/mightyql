{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "dependencies": {
    "core-js": "^3.0.1",
    "delay": "^4.2.0",
    "es6-error": "^4.1.1",
    "get-stack-trace": "^2.0.1",
    "iso8601-duration": "^1.2.0",
    "lodash": "^4.17.11",
    "pg": "^7.11.0",
    "pg-connection-string": "github:hjr3/pg-connection-string#ssl-support",
    "pg-cursor": "^2.0.0",
    "pg-types": "^2.0.1",
    "postgres-interval": "^1.2.0",
    "roarr": "^2.13.2",
    "serialize-error": "^4.1.0",
    "through2": "^3.0.1",
    "ulid": "^2.3.0"
  },
  "description": "A PostgreSQL client with strict types, detailed logging and assertions.",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/plugin-transform-flow-strip-types": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "@babel/register": "^7.4.4",
    "ava": "^1.4.1",
    "babel-plugin-istanbul": "^5.1.4",
    "babel-plugin-transform-export-default-name": "^2.0.4",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-canonical": "^17.1.0",
    "flow-bin": "^0.98.1",
    "flow-copy-source": "^2.0.6",
    "gitdown": "^2.5.7",
    "husky": "^2.3.0",
    "nyc": "^14.1.1",
    "semantic-release": "^15.13.12",
    "sinon": "^7.3.2"
  },
  "engines": {
    "node": ">=8.0"
  },
  "husky": {
    "hooks": {
      "post-commit": "npm run create-readme && git add README.md && git commit -m 'docs: generate docs' --no-verify",
      "pre-commit": "npm run lint && npm run test && npm run build"
    }
  },
  "keywords": [
    "postgresql",
    "promise",
    "types"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "slonik",
  "nyc": {
    "all": true,
    "exclude": [
      "src/bin",
      "src/queries/*.js"
    ],
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "html",
      "text-summary"
    ],
    "require": [
      "@babel/register"
    ],
    "silent": true,
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gajus/slonik"
  },
  "scripts": {
    "build": "rm -fr ./dist && NODE_ENV=production babel ./src --out-dir ./dist --copy-files --source-maps && flow-copy-source src dist",
    "create-readme": "gitdown ./.README/README.md --output-file ./README.md",
    "lint": "eslint ./src ./test && flow",
    "test": "NODE_ENV=test nyc ava --verbose --serial"
  },
  "version": "5.0.0"
}
